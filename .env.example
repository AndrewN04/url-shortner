# Database (provided by Neon via Vercel Marketplace integration)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Security
# Used for hashing API keys - generate a 32-byte hex string using one of these methods:
#
# OpenSSL (Linux/macOS/WSL):
#   openssl rand -hex 32
#
# Node.js (cross-platform):
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
#
# PowerShell (Windows):
#   -join ((1..32) | ForEach-Object { '{0:x2}' -f (Get-Random -Max 256) })
#
# Python:
#   python -c "import secrets; print(secrets.token_hex(32))"
#
API_KEY_PEPPER=your-secret-pepper-here

# Optional: Override max TTL (default: 14 days in seconds = 1209600)
# MAX_TTL_SECONDS=1209600
