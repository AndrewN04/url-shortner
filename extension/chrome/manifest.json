{
  "manifest_version": 3,
  "name": "URL Shortener - go.a04.dev",
  "version": "1.0.0",
  "description": "Quickly shorten URLs with go.a04.dev",
  "permissions": ["activeTab", "storage", "clipboardWrite"],
  "host_permissions": ["https://go.a04.dev/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}
